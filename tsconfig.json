{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "allowJs": true,
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "rootDir": "./src",
      "outDir": "./build",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "strictPropertyInitialization": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
   }
}
